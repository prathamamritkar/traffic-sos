{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "types": [
            "node"
        ],
        "outDir": "./dist",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "paths": {
            "@shared/*": [
                "../../shared/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}